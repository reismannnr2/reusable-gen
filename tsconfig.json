{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}
